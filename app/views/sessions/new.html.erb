<% content_for  :left_column do %>
<ul class="nav nav-tabs">
  <h1 class="nav-item"><a class="nav-link" href="/">Register</a></h1>
  <h1 class="nav-item"><a class="nav-link active" href="<%= new_login_path %>">Log_in</a></h1>
</ul>

  <%= render 'partials/errors' %>

  	<form action="<%= login_path %>" method="post" >
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <label>Email: </label>
        <input class="form-control" id="exampleFormControlInput1" type="text" name="email" placeholder="email">
      </div>
      <div class="form-group">
        <label>Password: </label>
        <input class="form-control" id="exampleFormControlInput1" type="password" name="password" placeholder="password">
      </div>
  		<button class="btn btn-primary" type="submit">Login</button>
  	</form>
<% end %>
