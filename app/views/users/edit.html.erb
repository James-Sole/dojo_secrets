<% content_for  :left_column do %>
  <h1>Edit</h1>

  <%= render 'partials/errors' %>

  	<form action="<%= user_path %>" method="post" >
      <input type="hidden" name="_method" value="patch">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <label>Name: </label>
        <input class="form-control" id="exampleFormControlInput1" type="text" name="user[name]" value="<%= @user.name%>">
      </div>
      <div class="form-group">
        <label>Email: </label>
        <input class="form-control" id="exampleFormControlInput1" type="text" name="user[email]" value="<%= @user.email%>">
      </div>
  		<button class="btn btn-primary" type="submit">Edit</button>
  	</form>
<% end %>
